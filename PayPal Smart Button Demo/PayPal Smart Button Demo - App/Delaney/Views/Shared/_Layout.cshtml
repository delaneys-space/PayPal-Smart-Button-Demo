<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PayPal Smart Button Test</title>

    @* Local *@
    <environment include="Development">
        <script src="~/library/jquery-3.3.1.min.js"></script>
        <script src="~/library/bootstrap/bootstrap.bundle.js"></script>

        <link href="~/development/css/bootstrap.css" rel="stylesheet" />
        <link href="~/development/css/site.css" rel="stylesheet" />

        <script src="~/development/js/json_PrepareString.js"></script>
        <script src="~/development/js/site.js"></script>
    </environment>

    @* Online *@
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="~/library/bootstrap/bootstrap.bundle.min.js"></script>
        <link href="~/production/css/site.min.css" rel="stylesheet" />
        <script src="~/production/js/site.min.js"></script>
    </environment>

</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="/">PayPal Smart Button Test</a>
            <button class="navbar-toggler collapsed"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarColor01"
                    aria-controls="navbarColor01"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarColor01" style="">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           href="/Product">Products</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           href="/Basket">Baskets</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           href="/Invoice">Invoices</a>
                    </li>
                </ul>


            </div>
        </nav>
    </header>

    <div class="content">
        @RenderBody()
        <footer></footer>
        <div class="container">
            <p class="text-right">Copyright &copy Delaneys.Space @DateTime.Now.Year</p>
        </div>
    </div>
</body>
</html>